<div class="flex-center flex-column mt-3">
  <h1>Contribute a Poem</h1>
    <form action="/poems/new" method="post">
        <input name="title" placeholder="Poem Title"/>
        <input name="author" placeholder="Author"/>
        <input name="date" placeholder="Date Written"/>
      
        <select name="chapter">
          <option value="">Select Chapter</option>
          <% chapters.forEach(chapter => { %>
          <option value="<%= chapter._id %>"><%= chapter.name %></option>
          <% }) %>
        </select>

        <textarea name="content"cols="30" rows="10"></textarea>
      
        <button type="submit">Submit</button>
    </form>
</div>

<div class="flex-center flex-column">
  <p class="m-4">Have multiple entries to submit? Add a new chapter below!</p>
  <h3>Add a Chapter</h3>
    <form action="/new" method="POST">
      <input name="name" placeholder="Life, Family.." class="form-control"/>
      <button type="submit" class="mt-2 btn btn-primary btn-block">Submit</button>
    </form>
</div>