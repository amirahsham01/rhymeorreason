<div class="modal fade" id="modalPoemForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header text-center">
      <h4 class="modal-title w-100" style="font-family: 'Arima Madurai';">Contribute a Poem</h4>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <form action="/poems/new" method="post">
      <div class="modal-body mx-3">
        <div class="md-form mb-5">
          <select name="chapter" class="form-control validate">
            <option value="">Select Chapter</option>
            <% chapters.forEach(chapter => { %>
            <option value="<%= chapter._id %>"><%= chapter.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="md-form mb-4">
          <i class="fas fa-tag prefix grey-text"></i>
          <input type="text" name="title" class="form-control validate" placeholder="Poem Title"/>
        </div>

        <div class="md-form mb-5">
          <i class="fas fa-user prefix grey-text"></i>
          <input type="text" name="author" class="form-control validate"placeholder="Author"/>
        </div>

        <div class="md-form">
          <i class="fas fa-pen-fancy prefix grey-text"></i>
          <textarea type="text" name="content" class="md-textarea form-control" rows="5" placeholder="Your message"></textarea>
        </div>

      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button type="submit" class="btn start" style="font-size: 14px;">Submit</button>
      </div>
    </form>
  </div>
</div>
</div>

<div class="modal fade" id="modalAddChapter" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header text-center">
      <h4 class="modal-title w-100" style="font-family: 'Arima Madurai';">Add a Chapter</h4>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <form action="/new" method="POST">
      <div class="modal-body mx-3">
          <div class="md-form mb-5">
            <i class="fas fa-book-open prefix grey-text"></i>
            <input type="text" name="name" class="form-control validate" placeholder="Name of chapter"/>
          </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button type="submit" class="btn start" style="font-size: 14px;">Submit</button>
      </div>
    </form>
  </div>
</div>
</div>



